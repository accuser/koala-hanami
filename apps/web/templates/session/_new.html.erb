<%=
  form_for :credentials, routes.session_path, class: 'form-session-new', values: {credentials: credentials} do
    div class: 'text-center mb-4' do
      h1 form_title, class: 'h3 mb-3 font-weight-normal'
      p "Enter your email address and password to sign in."
    end
    div class: 'form-label-group' do
      email_field :email, class: 'form-control', required: '', autofocus: ''
      label 'Email address', for: :email
    end
    div class: 'form-label-group' do
      password_field :password, class: 'form-control', required: ''
      label 'Password', for: :password
    end
    submit 'Sign in', class: 'btn btn-primary'
  end
%>